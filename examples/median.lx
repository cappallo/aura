module app.stats

type Option<T> = Some { value: T } | None

type Stats {
  values: List<Int>
}

fn median(list: List<Int>) -> Int {
  let n = length(list)
  if n == 0 {
    return 0
  }
  let idx = (n - 1) / 2
  return list[idx]
}

test median_examples {
  assert_equal(median([1, 3, 5]), 3)
  assert_equal(median([2, 4, 6, 8]), 4)
}
